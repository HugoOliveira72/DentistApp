<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.FirstFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="412dp"
        android:layout_height="109dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/gradient_wall"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewConsultas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49">

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seja bem vindo"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="399dp"
            android:layout_height="33dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textviewNomeLabel"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="UsuÃ¡rio:"
                android:textColor="#263238"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_Username"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nao consigo ler nada"
                android:textColor="#263238" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="398dp"
            android:layout_height="38dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewEmailLabel"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="E-mail:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_EmailUser"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EMAIL_USER" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_hora"
        android:layout_width="107dp"
        android:layout_height="167dp"
        android:layout_marginBottom="195dp"
        android:hint="HORA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewConsultas" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewConsultas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="42dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_hora"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>